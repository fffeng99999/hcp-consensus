# HCP-Consensus Environment Configuration

# Chain Configuration
CHAIN_ID=hcp-testnet
NODE_COUNT=4

# Network Configuration
P2P_PORT_BASE=26656
RPC_PORT_BASE=26657
REST_PORT_BASE=1317
GRPC_PORT_BASE=9090

# Consensus Configuration
CONSENSUS_TYPE=tpbft  # Options: tpbft, raft, hotstuff
TIMEOUT_PROPOSE=1000  # milliseconds
TIMEOUT_COMMIT=500    # milliseconds

# Trust Manager Configuration
TRUST_UPDATE_INTERVAL=10      # blocks
MIN_TRUST_THRESHOLD=0.5       # 0.0 - 1.0
VALIDATOR_SELECTION_COUNT=4   # 4-7 recommended

# Performance Tuning
CREATE_EMPTY_BLOCKS=true
CREATE_EMPTY_BLOCKS_INTERVAL=0  # seconds
MEMPOOL_SIZE=10000
MAX_TX_BYTES=1048576            # 1MB

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9100

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json # json, plain
